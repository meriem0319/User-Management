<div class="row">
  <div class="col-6"><h1>Students</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a
      href="/addstudent"
      type="button"
      class="btn btn-primary align-self-center"
    >+ add new student</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Stu. ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Parent's Email</th>
      <th scope="col">Parent's Phone</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
      <tr>
        <th scope="row">{{this.id}}</th>
        <td>{{this.first_name}}</td>
        <td>{{this.last_name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.phone}}</td>
        <td class="text-end">

          <a href="#" type="button" class="btn btn-light btn-small"><i
              class="bi bi-eye"
            ></i>
            View</a>
          <a
            {{! linking the stu.ID with edit button }}
            href="/editstudent/{{this.id}}"
            type="button"
            class="btn btn-light btn-small"
          ><i class="bi bi-pencil"></i>
            Edit</a>
          <a href="#" type="button" class="btn btn-light btn-small"><i
              class="bi bi-person-x"
            ></i>
            Delete</a>

        </td>
      </tr>
    {{/each}}
  </tbody>
</table>